		// methods or service providers to keep the code more focused and granular.
		App::register('{{path}}\{{namespace}}\Providers\RouteServiceProvider');

		$this->registerNamespaces();
	}

	/**
	 * Register the {{name}} module resource namespaces.
	 *
	 * @return void
	 */
